<Window x:Class="SnakeDeathmatch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Snake Deathmatch" Height="500" Width="500"
        SizeToContent="WidthAndHeight" WindowStyle="SingleBorderWindow" ResizeMode="CanMinimize"
        Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Background="DarkGray" Orientation="Horizontal">
            <Button x:Name="_buttonRestart" HorizontalAlignment="Left" Margin="4" Width="60" Height="22" Click="_buttonRestart_Click">Restart</Button>
            <Button x:Name="_buttonReply" HorizontalAlignment="Left" Margin="4" Width="60" Height="22" Click="_buttonReplay_Click">Replay</Button>
            <Button x:Name="_buttonOpen" HorizontalAlignment="Left" Margin="4" Width="60" Height="22" Click="_buttonOpen_Click">Open</Button>
            <Button x:Name="_buttonTests" HorizontalAlignment="Left" Margin="4" Width="60" Height="22" Click="_buttonTests_Click">Tests</Button>            
        </StackPanel>
        <Canvas x:Name="_canvas" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Background="Black"/>
    </Grid>
</Window>
